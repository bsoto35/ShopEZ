<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Servlets -->
	<servlet>
		<servlet-name>IndexServlet</servlet-name>
		<servlet-class>edu.ycp.cs320.ShopEZ.servlet.IndexServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>InsertItemServlet</servlet-name>
		<servlet-class>edu.ycp.cs320.ShopEZ.servlet.InsertItemServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>edu.ycp.cs320.ShopEZ.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ReviewListServlet</servlet-name>
		<servlet-class>edu.ycp.cs320.ShopEZ.servlet.ReviewListServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>HelpServlet</servlet-name>
		<servlet-class>edu.ycp.cs320.ShopEZ.servlet.HelpServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AboutServlet</servlet-name>
		<servlet-class>edu.ycp.cs320.ShopEZ.servlet.AboutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RouteServlet</servlet-name>
		<servlet-class>edu.ycp.cs320.ShopEZ.servlet.RouteServlet</servlet-class>
	</servlet>

	<!-- Servlet mappings -->
	
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>InsertItemServlet</servlet-name>
		<url-pattern>/insertItem</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>IndexServlet</servlet-name>
		<url-pattern>/welcome</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RouteServlet</servlet-name>
		<url-pattern>/route</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ReviewListServlet</servlet-name>
		<url-pattern>/review</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>AboutServlet</servlet-name>
		<url-pattern>/about</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>HelpServlet</servlet-name>
		<url-pattern>/help</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>welcome</welcome-file>
	</welcome-file-list>
</web-app>
